@using HipChatCentral.Domain.Models.ViewModels
@model CreateApiKeyViewModel 

@{
    
}

<!DOCTYPE html>

<html>
    <head>
        <title>title</title>
    </head>
    <body>
        <div>            
            @using (Html.BeginForm("AddKey", "Admin", FormMethod.Post,new {@class="form-horizontal"}))
            {
                <fieldset>
                    <div id="legend">
                        <legend>Add A New HipChat API Key To @Model.groupAccount.GroupName</legend>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Key Name</label>
                        <div class="controls">
                            @Html.TextBoxFor(x => x.apiKey.Name)
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">HipChat API Key</label>
                        <div class="controls">
                            @Html.TextBoxFor(x => x.apiKey.ApiKey)
                        </div>
                    </div>
                    @Html.HiddenFor(x=>x.groupAccount.Id)
                    <div class="control-group">
                        <div class="controls">
                            <input type="submit" value="Add Key" class="btn btn-primary" />
                        </div>
                    </div>
                </fieldset>
            }
        </div>
    </body>
</html>