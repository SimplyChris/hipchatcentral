@using System.Web.Optimization
@using BootstrapSupport
@using NavigationRoutes
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">        
        <title>@ViewBag.Title</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="@Styles.Url("~/content/css")" rel="stylesheet"/>
        @RenderSection("head", required: false)
        @Html.Partial("_html5shiv")
        @* favicons and touch icons go here *@
    </head>
    @Scripts.Render("~/js")
    <body>
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <a class="brand" href="#" title="change in _bootstrapLayout.basic.cshtml">HipChat Central</a>                
                <ul class="nav">
                    <li class="active">                        
                        @Html.ActionLink("Home", "Index", "Home")                        
                    </li>
                    <li>@Html.ActionLink("Control", "Index", "Admin")</li>
                    <li>@Html.ActionLink("Status", "Index", "Status")</li>                                                             
                    @Html.Navigation()
                </ul>                
                <div class="container">                    
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <div class="nav-collapse collapse">
                </div>
                </div>
            </div>
        </div>        
        <div class="container">
            @Html.Partial("_alerts")
            @Html.Partial("_validationSummary")
            @RenderBody()   
            <hr>
            <footer>
                <p>&copy; Company @System.DateTime.Now.ToString("yyyy")</p>
            </footer> 
        </div>
         @RenderSection("Scripts", required: false)
    </body>
</html>

